@{
    ViewBag.Title = "Main";
}

<body>

    <b class="screen-overlay"></b>
    <!-- ========================= SECTION PAGETOP ========================= -->
    <section class="section-pagetop bg-gray">
        <div class="container">
            <h2 class="title-page">Tài khoản của tôi</h2>
        </div> <!-- container //  -->
    </section>
    <!-- ========================= SECTION PAGETOP END// ========================= -->
    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content padding-y">
        <div class="container">

            <div class="row">
                <aside class="col-md-3">
                    <nav class="list-group">
                        <a class="list-group-item active" href="@Url.Action("Main", "Profile")"> Tổng quan tài khoản </a>
                        <a class="list-group-item" href="@Url.Action("Address", "Profile")"> Địa chỉ của tôi </a>
                        <a class="list-group-item" href="@Url.Action("Orders", "Profile")"> Đơn hàng của tôi </a>
                        <a class="list-group-item" href="@Url.Action("Wishlist", "Profile")"> Danh sách yêu thích của tôi </a>
                        <a class="list-group-item" href="@Url.Action("Seller", "Profile")"> Mặt hàng tôi bán </a>
                        <a class="list-group-item" href="@Url.Action("Setting", "Profile")"> Cài đặt </a>
                        <a class="list-group-item" href="@Url.Action("Login", "User")"> Đăng xuất </a>
                    </nav>
                </aside> <!-- col.// -->
                <main class="col-md-9">

                    <article class="card mb-3">
                        <div class="card-body">

                            <figure class="icontext">
                                <div class="icon">
                                    <img class="rounded-circle img-sm border" src="~/Content/images/avatars/avatar3.jpg">
                                </div>
                                <div class="text">
                                    <strong> Mr. Jackson Someone </strong> <br>
                                    <p class="mb-2"> myloginname@gmail.com  </p>
                                    <a href="#" class="btn btn-light btn-sm">Chỉnh sửa</a>
                                </div>
                            </figure>
                            <hr>
                            <p>
                                <i class="fa fa-map-marker text-muted"></i> &nbsp; Địa chỉ của tôi:
                                <br>
                                Thành phố Tashkent, Tên phố, Tòa nhà 123, Nhà 321 &nbsp
                                <a href="#" class="btn-link"> Chỉnh sửa</a>
                            </p>

                            <article class="card-group card-stat">
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">38</h4>
                                        <span>Đơn hàng</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">5</h4>
                                        <span>Danh sách yêu thích</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">12</h4>
                                        <span>Đang chờ giao hàng</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">50</h4>
                                        <span>Sản phẩm đã giao</span>
                                    </div>
                                </figure>
                            </article>


                        </div> <!-- card-body .// -->
                    </article> <!-- card.// -->

                    <article class="card  mb-3">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Đơn hàng gần đây</h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <figure class="itemside  mb-3">
                                        <div class="aside"><img src="~/Content/images/items/1.jpg" class="border img-sm"></div>
                                        <figcaption class="info">
                                            <time class="text-muted"><i class="fa fa-calendar-alt"></i> 12.09.2019</time>
                                            <p>Tên sách hay điển hình</p>
                                            <span class="text-success">Đơn hàng đã được xác nhận</span>
                                        </figcaption>
                                    </figure>
                                </div> <!-- col.// -->
                                <div class="col-md-6">
                                    <figure class="itemside  mb-3">
                                        <div class="aside"><img src="~/Content/images/items/2.jpg" class="border img-sm"></div>
                                        <figcaption class="info">
                                            <time class="text-muted"><i class="fa fa-calendar-alt"></i> 12.09.2019</time>
                                            <p>Làm thế nào để trở nên giàu có</p>
                                            <span class="text-success">Đã rời kho</span>
                                        </figcaption>
                                    </figure>
                                </div> <!-- col.// -->
                                <div class="col-md-6">
                                    <figure class="itemside mb-3">
                                        <div class="aside"><img src="~/Content/images/items/3.jpg" class="border img-sm"></div>
                                        <figcaption class="info">
                                            <time class="text-muted"><i class="fa fa-calendar-alt"></i> 12.09.2019</time>
                                            <p>Sách Harry Potter</p>
                                            <span class="text-success">Đã giao hàng</span>
                                        </figcaption>
                                    </figure>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->

                            <a href="#" class="btn btn-outline-primary btn-block"> Xem tất cả đơn hàng <i class="fa fa-chevron-down"></i>  </a>
                        </div> <!-- card-body .// -->
                    </article> <!-- card.// -->

                </main> <!-- col.// -->
            </div>

        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->

</body>
</html>