@{
    ViewBag.Title = "Wishlist";
}

<body>

    <b class="screen-overlay"></b>

    <!-- ========================= SECTION PAGETOP ========================= -->
    <section class="section-pagetop bg-gray">
        <div class="container">
            <h2 class="title-page">Tài khoản của tôi</h2>
        </div> <!-- container //  -->
    </section>
    <!-- ========================= SECTION PAGETOP END// ========================= -->
    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content padding-y">
        <div class="container">

            <div class="row">
                <aside class="col-md-3">
                    <nav class="list-group">
                        <a class="list-group-item active" href="@Url.Action("Main", "Profile")"> Tổng quan tài khoản </a>
                        <a class="list-group-item" href="@Url.Action("Address", "Profile")"> Địa chỉ của tôi </a>
                        <a class="list-group-item" href="@Url.Action("Orders", "Profile")"> Đơn hàng của tôi </a>
                        <a class="list-group-item" href="@Url.Action("Wishlist", "Profile")"> Danh sách yêu thích của tôi </a>
                        <a class="list-group-item" href="@Url.Action("Seller", "Profile")"> Các mặt hàng tôi bán </a>
                        <a class="list-group-item" href="@Url.Action("Setting", "Profile")"> Cài đặt </a>
                        <a class="list-group-item" href="@Url.Action("Login", "User")"> Đăng xuất </a>
                    </nav>
                </aside> <!-- col.// -->
                <main class="col-md-9">

                    <article class="card">
                        <div class="card-body">

                            <div class="row">
                                <div class="col-md-6">
                                    <figure class="itemside mb-4">
                                        <div class="aside"><img src="~/Content/images/items/1.jpg" class="border img-md"></div>
                                        <figcaption class="info">
                                            <a href="#" class="title">Tên sản phẩm tuyệt vời ở đây</a>
                                            <p class="price mb-2">$80</p>
                                            <a href="#" class="btn btn-secondary btn-sm"> Thêm vào giỏ hàng </a>
                                            <a href="#" class="btn btn-danger btn-sm" data-toggle="tooltip" title="" data-original-title="Xóa khỏi danh sách yêu thích"> <i class="fa fa-times"></i> </a>
                                        </figcaption>
                                    </figure>
                                </div> <!-- col.// -->

                                <div class="col-md-6">
                                    <figure class="itemside mb-4">
                                        <div class="aside"><img src="~/Content/images/items/2.jpg" class="border img-md"></div>
                                        <figcaption class="info">
                                            <a href="#" class="title">Áo khoác nam cho mùa đông</a>
                                            <p class="price mb-2">$1280</p>
                                            <a href="#" class="btn btn-secondary btn-sm"> Thêm vào giỏ hàng </a>
                                            <a href="#" class="btn btn-danger btn-sm" data-toggle="tooltip" title="" data-original-title="Xóa khỏi danh sách yêu thích"> <i class="fa fa-times"></i> </a>
                                        </figcaption>
                                    </figure>
                                </div> <!-- col.// -->

                                <div class="col-md-6">
                                    <figure class="itemside mb-4">
                                        <div class="aside"><img src="~/Content/images/items/3.jpg" class="border img-md"></div>
                                        <figcaption class="info">
                                            <a href="#" class="title">Cuốn sách khác của sản phẩm ở đây</a>
                                            <p class="price mb-2">$280</p>
                                            <a href="#" class="btn btn-secondary btn-sm"> Thêm vào giỏ hàng </a>
                                            <a href="#" class="btn btn-danger btn-sm" data-toggle="tooltip" title="" data-original-title="Xóa khỏi danh sách yêu thích"> <i class="fa fa-times"></i> </a>
                                        </figcaption>
                                    </figure>
                                </div> <!-- col.// -->
                            </div> <!-- row .//  -->

                        </div> <!-- card-body.// -->
                    </article>


                </main> <!-- col.// -->
            </div>

        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->

</body>

</html>